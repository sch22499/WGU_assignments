<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.ViewController.Home">
   <children>
      <GridPane prefHeight="400.0" prefWidth="600.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Button fx:id="viewScheduleButton" mnemonicParsing="false" onAction="#openSchedulePage" text="Calender" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Button fx:id="viewCustomersButton" mnemonicParsing="false" onAction="#openCustomerPage" text="Customers" GridPane.columnIndex="2" GridPane.rowIndex="1" />
            <Button fx:id="viewReportsButton" mnemonicParsing="false" onAction="#openReportsPage" text="Reports" GridPane.columnIndex="3" GridPane.rowIndex="1" />
            <Label text="Home" />
            <Button fx:id="logOutButton" mnemonicParsing="false" onAction="#logOut" text="Log Out" GridPane.rowIndex="2" />
         </children>
      </GridPane>
   </children>
</AnchorPane>
