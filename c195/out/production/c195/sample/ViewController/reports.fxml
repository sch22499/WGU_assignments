<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.ViewController.Reports">
   <children>
      <BorderPane prefHeight="400.0" prefWidth="600.0">
         <center>
            <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <SplitMenuButton fx:id="dropdownMenu" mnemonicParsing="false" onAction="#onSelectMenu" text="Select Report Type">
                    <items>
                      <MenuItem fx:id="appointmentTypesOption" mnemonicParsing="false" onAction="#onSelectAppointmentTypeOption" text="Appointment Report" />
                      <MenuItem fx:id="scheduleOption" mnemonicParsing="false" onAction="#onSelectConsultantScheduleOption" text="Schedule Report" />
                        <MenuItem fx:id="loginRecordOption" mnemonicParsing="false" onAction="#onSelectLoginRecordOption" text="Login Report" />
                    </items>
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" top="25.0" />
                     </HBox.margin>
                  </SplitMenuButton>
                  <TextArea fx:id="textArea" prefHeight="296.0" prefWidth="403.0">
                     <HBox.margin>
                        <Insets bottom="50.0" top="25.0" />
                     </HBox.margin>
                  </TextArea>
               </children>
            </HBox>
         </center>
         <top>
            <Label text="Report Generator" BorderPane.alignment="CENTER">
               <font>
                  <Font size="21.0" />
               </font>
               <BorderPane.margin>
                  <Insets top="10.0" />
               </BorderPane.margin>
            </Label>
         </top>
         <bottom>
            <Button fx:id="homeButton" mnemonicParsing="false" text="Back" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="25.0" />
               </BorderPane.margin>
            </Button>
         </bottom>
      </BorderPane>
   </children>
</AnchorPane>
